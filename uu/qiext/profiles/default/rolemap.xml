<?xml version="1.0"?>
<rolemap>
  <roles>
    <role name="Project Member" />
    <role name="Workspace Viewer" />
    <role name="Workspace Contributor" />
  </roles>
  <permissions>
    <permission name="Add portal member" acquire="False">
      <role name="Manager" />
      <role name="Owner" />
      <role name="Anonymous" /> <!-- self-registration -->
    </permission>
    <!-- permissions from Products.qi.extranet.types permissions.zcml: -->
    <permission name="qiproject: Add Project" acquire="True">
      <role name="Manager" />   
    </permission>
    <permission name="qiproject: Add Team" acquire="True">
      <role name="Manager" />   
    </permission>
    <permission name="qiteam: Add SubTeam" acquire="True">
      <role name="Manager" />   
    </permission>
    <!-- (workspace) contributors get add permissions for normal content: -->
    <permission name="Add portal content" acquire="True">
      <role name="Workspace Contributor" />
      <role name="Contributor" />
    </permission>
    <permission name="Add portal topics" acquire="True">
      <role name="Workspace Contributor" />
      <role name="Contributor" />
    </permission>
    <permission name="Add portal folders" acquire="True">
      <role name="Workspace Contributor" />
      <role name="Contributor" />
    </permission>
    <!--
    <permission name="plone.app.collection: Add Collection" acquire="True">
      <role name="Workspace Contributor" />
      <role name="Contributor" />
    </permission>
    -->
  </permissions>
</rolemap>

